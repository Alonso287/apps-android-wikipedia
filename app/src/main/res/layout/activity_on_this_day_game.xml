<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/paper_color">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="@style/ToolbarStyle.Small"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:indeterminate="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/currentQuestionContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="?attr/actionBarSize">

        <View
            android:id="@+id/questionDotLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/inactive_color"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintStart_toStartOf="@id/questionDot1"
            app:layout_constraintEnd_toEndOf="@id/questionDot3"
            app:layout_constraintTop_toTopOf="@id/questionDot1"
            app:layout_constraintBottom_toBottomOf="@id/questionDot1" />

        <View
            android:id="@+id/questionDot1pulse"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="?attr/success_color"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:id="@+id/questionDot1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="?attr/success_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/questionDot2pulse"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="?attr/progressive_color"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/questionDot1"
            app:layout_constraintStart_toEndOf="@id/questionDot1" />
        <View
            android:id="@+id/questionDot2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="?attr/progressive_color"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/questionDot1"
            app:layout_constraintStart_toEndOf="@id/questionDot1" />

        <View
            android:id="@+id/questionDot3pulse"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="?attr/inactive_color"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/questionDot2"
            app:layout_constraintStart_toEndOf="@id/questionDot2" />
        <View
            android:id="@+id/questionDot3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/shape_circle"
            android:backgroundTint="?attr/inactive_color"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/questionDot2"
            app:layout_constraintStart_toEndOf="@id/questionDot2" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/questionDot1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:textColor="?attr/primary_color"
            android:fontFamily="serif"
            android:textSize="24sp"
            tools:text="Lorem ipsum"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/yearButtonsFlow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:constraint_referenced_ids="yearChoice1,yearChoice2,yearChoice3,yearChoice4"
            app:flow_horizontalBias="0"
            app:flow_horizontalGap="8dp"
            app:flow_horizontalStyle="packed"
            app:flow_verticalAlign="center"
            app:flow_wrapMode="chain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yearChoice1"
            style="@style/App.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/primary_color"
            android:layout_marginStart="16dp"
            tools:text="1234"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yearChoice2"
            style="@style/App.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/primary_color"
            android:layout_marginStart="16dp"
            tools:text="1234"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yearChoice3"
            style="@style/App.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/primary_color"
            android:layout_marginStart="16dp"
            tools:text="1234"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yearChoice4"
            style="@style/App.Button.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/primary_color"
            android:layout_marginStart="16dp"
            tools:text="1234"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            style="@style/App.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/yearButtonsFlow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/on_this_day_game_submit"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <org.wikipedia.views.WikiErrorView
        android:id="@+id/errorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
